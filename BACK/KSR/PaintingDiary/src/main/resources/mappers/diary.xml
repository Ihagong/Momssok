<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.PaintingDiary.mapper.DiaryMapper">
    <insert id="saveDiary" parameterType="DiaryDto">
        INSERT INTO painting_diary.diary
        (painting)
        VALUES
        (#{painting})
    </insert>

    <select id="getDiary" parameterType="int" resultType="string">
        SELECT painting FROM painting_diary.diary
        WHERE id = #{id}
    </select>

</mapper>