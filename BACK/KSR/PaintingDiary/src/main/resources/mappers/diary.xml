<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.PaintingDiary.mapper.DiaryMapper">
    <insert id="saveDiary" parameterType="DiaryDto">
        INSERT INTO painting_diary.diary
        (diary_id, painting, content)
        VALUES
        (#{diary_id}, #{painting}, #{content})
    </insert>

    <select id="getDiary" parameterType="DiaryDto" resultType="DiaryDto">
        SELECT *
        FROM painting_diary.diary
        WHERE diary_id = #{diary_id}
    </select>

</mapper>