<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ihagong.momssok.mapper.DrawingMapper">
    <select id="lookupAllDrawing" parameterType="String" resultType="com.ihagong.momssok.model.dto.DrawingDto">
        SELECT * FROM drawing
        WHERE email_name = #{email_name}
    </select>

    <select id="lookupDrawing" parameterType="int" resultType="com.ihagong.momssok.model.dto.DrawingDto">
        SELECT * FROM drawing
        WHERE drawing_id = #{drawing_id}
    </select>

    <delete id="deleteDrawing" parameterType="String">
        DELETE FROM drawing
        WHERE email_name LIKE(CONCAT(#{email}, '%'))
    </delete>
</mapper>